# http://editorconfig.org/

root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[*.{go,scss,js,jsx,json,html}]
indent_style = tab

[webapp/package.json]
indent_style = space
indent_size = 2

[webapp/.eslintrc.json]
indent_style = tab

[Makefile]
indent_style = tab

[*.md]
trim_trailing_whitespace = false
indent_style = space
